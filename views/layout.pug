          a.block.py-2.pl-3.pr-4.text-white.bg-blue-700.rounded(href='/' class='md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500' aria-current='page') Home
        li
          a.block.py-2.pl-3.pr-4.text-white.bg-blue-700.rounded(href='/users' class='md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500' aria-current='page') Users
